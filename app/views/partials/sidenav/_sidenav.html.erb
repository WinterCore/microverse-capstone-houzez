<div class="sticky top-0 md:flex flex-col md:flex-row md:min-h-screen w-full">
    <div class="flex flex-col w-full md:w-64 text-gray-700 bg-white flex-shrink-0">
        <div class="flex-shrink-0 px-8 py-4 flex flex-row items-center justify-between">
            <a href="#" class="text-lg font-semibold tracking-widest text-gray-900 uppercase rounded-lg focus:outline-none focus:shadow-outline">Houzez Admin</a>
            <button id="hamburger" class="rounded-lg md:hidden rounded-lg focus:outline-none focus:shadow-outline">
                <svg fill="currentColor" viewBox="0 0 20 20" class="w-6 h-6">
                    <path id="nav-open" class="hidden" fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM9 15a1 1 0 011-1h6a1 1 0 110 2h-6a1 1 0 01-1-1z" clip-rule="evenodd"></path>
                    <path id="nav-close" fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
            </button>
        </div>
        <nav id="nav" class="flex-grow flex-col md:flex px-4 pb-4 md:pb-0 md:overflow-y-auto flex justify-between">
            <div>
                <%= render 'partials/sidenav/sidenav-link', path: admin_dashboard_path, text: "Dashboard"  %>
                <%= render 'partials/sidenav/sidenav-link', path: houses_path, text: "Houses"  %>
            </div>
            <div>
                <%= render 'partials/sidenav/sidenav-link', path: destroy_admin_session_path, path: destroy_admin_session_path, text: "Logout"  %>
            </div>
        </nav>
    </div>
</div>

<script>
(function () {
    let open = true;
    const navOpen = document.getElementById("nav-open");
    const navClose = document.getElementById("nav-close");
    const nav = document.getElementById("nav");

    document.getElementById("hamburger").addEventListener("click", function () {
        if (open) {
            navOpen.classList.remove("hidden");
            navClose.classList.add("hidden");
            nav.classList.add("hidden");
        } else {
            navOpen.classList.add("hidden");
            navClose.classList.remove("hidden");
            nav.classList.remove("hidden");
        }
        open = !open;
    });
}());
</script>