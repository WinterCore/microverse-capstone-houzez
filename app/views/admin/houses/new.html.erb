<div class="flex flex-col md:flex-row">
    <div class="flex-grow-0">
        <%= render 'partials/sidenav/sidenav' %>
    </div>
    <main class="flex-grow p-8">
        <h1 class="text-4xl font-bold text-center">New House</h1>
        <%= form_for(@house, html: { class: "mt-8 space-y-6" }) do |f| %>
            <div class="rounded-md shadow-sm space-y-4">
                <div>
                    <%= f.text_field :name, autofocus: true, placeholder: "Name", class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-red-500 focus:border-red-500 focus:z-10 sm:text-sm" %>
                </div>
                <div>
                    <%= f.text_field :price_per_month, type: "number", autofocus: true, placeholder: "Price per Month", class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-red-500 focus:border-red-500 focus:z-10 sm:text-sm" %>
                </div>
                <div>
                    <%= f.select :house_type_id, @houseTypes, {}, { class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-red-500 focus:border-red-500 focus:z-10 sm:text-sm" } %>
                </div>
                <div>
                    <%= f.text_area :description, autofocus: true, placeholder: "Description", class: "appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-red-500 focus:border-red-500 focus:z-10 sm:text-sm" %>
                </div>
                <div>
                    <%= f.file_field(:images, accept: "image/*", multiple: true) %>
                </div>
            </div>

            <div>
                <div class="py-6">
                    <%= render "partials/form_errors", resource: @house %>
                </div>
                <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                    Create
                </button>
            </div>
        <% end %>
    </main>
</div>

